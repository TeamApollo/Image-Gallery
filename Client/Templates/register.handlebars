<div class="container">
    <h2 class="list-group-item-heading">Register</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="tb-reg-firstName">First Name: </label>
                <input id="tb-reg-firstName" class="form form-control" placeholder="Your name">
            </div>
            <div class="form-group">
                <label for="tb-reg-lastName">Last Name: </label>
                <input id="tb-reg-lastName" class="form form-control" placeholder="Your family name">
            </div>
            <div class="form-group">
                <label for="tb-reg-email">Email: </label>
                <input id="tb-reg-email" class="form form-control" placeholder="Your Email">
            </div>
            <div class="form-group">
                <label for="tb-reg-password">Password: </label>
                <input id="tb-reg-password" class="form form-control" type="password" placeholder="Your Password">
            </div>
            <div class="form-group">
                <label for="tb-reg-confirmPassword">Confirm Password: </label>
                <input id="tb-reg-confirmPassword" class="form form-control" type="password" placeholder="Confirm your Password">
            </div>
        </div>
    </div>
    <input id="btn-register-submit" type="button" value="Register" class="btn btn-success">
</div>