<div class="container">
    <div class="modal-content" style="text-align: center">
        <h2 class="modal-header list-group-item-heading">Create Album</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="tb-alb-name">Name: </label>
                    <input id="tb-alb-name" class="form form-control"
                           placeholder="Album Name, something like Cool Vacation or Summer..">
                </div>
                <div class="form-group">
                    <label for="tb-alb-desc">Description: </label>
                    <textarea id="tb-alb-desc" class="form form-control" placeholder="Album Description"></textarea>
                </div>
                <div class="form-group">
                    <input id="up-alb-media" type="file" value="send" />
                    <button id="btn-alb-upload" class="btn btn-primary">Upload</button>
                </div>
                <div class="form-group">
                    <label>Visibility:
                        <select class="form-control" id="sl-alb-private">
                        <option value="false">Public</option>
                        <option value="true">Private</option>
                    </select>
                    </label>
                </div>
            </div>
        </div>
        <input id="btn-alb-create" type="button" value="Create" class="btn btn-primary">
    </div>
</div>